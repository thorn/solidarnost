= content_for :sidebar do
  %li= link_to 'Экспорт в Excel', "#", class: "btn info excel_export"
= form_for @search, url: search_family_helps_path, html: {method: :post, class: "form-stacked noprint family_search"} do |f|
  = render 'search_form_fields', f: f

%h1
  Найденная помощь
  %small= "Всего оказано на #{@whole_amount} руб. Всего семей #{@whole_families}. Людей: #{@whole_people}"
= will_paginate @family_helps
= form_tag delete_multiple_path, :id => "delete_multiple" do
  = render 'families/table'
  = submit_tag "Удалить отмеченные", :class => "btn error noprint"
- if params[:q]
  = link_to "Полный список семей", families_path, :class => "btn info noprint"
= will_paginate @family_helps
