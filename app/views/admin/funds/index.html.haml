%h1 Список фондов
= form_tag delete_multiple_path, :id =>"delete_multiple" do
  %input(type="hidden" name="model" value="Funds")
  %table.sortable_table(style="width: 600px;")
    %thead
      %tr
        %th
          %div(align="center")
            %input#mark_all(type="checkbox")
        %th Название
        %th Действия
    %tbody
      - @funds.each do |fund|
        %tr
          %td
            %div(align="center")
              = check_box_tag "model_ids[]", fund.id
          %td= fund.name
          %td
            = link_to 'Удалить', [:admin, fund], :confirm => 'Все семьи с данного населенного пункта будут также удалены!', :method => :delete
            = link_to 'Изменить', edit_admin_fund_path(fund)
  = submit_tag "Удалить отмеченные", :class => "btn error", :confirm => 'Все семьи с отмеченных населенных пунктов будут также удалены!'
