= content_for :sidebar do
  = link_to "Редактир. пользователя", edit_admin_user_path(@user), :class => "btn primary"
.info-title
  .info-name= @user.name
.family-main-info
  .info-block
    .info-block-title Личная информация
    .info-block-body
      .info
        .info-name
          %span Имя
        .info-value= @user.name
      .info
        .info-name
          %span Почтовый ящик
        .info-value= @user.email
      .info
        .info-name
          %span Город
        .info-value= @user.city_name
      .info
        .info-name
          %span Адрес
        .info-value= @user.address
      .info
        .info-name
          %span Телефон
        .info-value= @user.phone
      .info
        .info-name
          %span Профессия
        .info-value= @user.profession
      %br
      .info
        .info-name
          %span Роль
        .info-value= @user.roles.first.title
  .info-block
    .info-block-title Прикрепленные семьи
    .info-block-body
      - unless @user.families.count == 0
        - @user.families.each do |family|
          .info
            .info-name
              %span= link_to family.title, family
            .info-value= link_to "Открепить", users_family_path(@user.users_families.where(:family_id => family.id).first.id, :user_id => @user.id), :method => :delete
      - else
        Нет прикрепленных семей
.field
= link_to 'Редактировать', edit_admin_user_path(@user), :class => "btn"

= link_to 'Назад', admin_users_path, :class => "btn"
