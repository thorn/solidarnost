= form_for [:admin, @city], :html => {:class => "form-stacked"} do |f|
  -if @city.errors.any?
    #error_explanation
      %h2= "#{pluralize(@city.errors.count, "error")} prohibited this city from being saved:"
      %ul
        - @city.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name, "Название города"
    = f.text_field :name
    = f.label :ancestry, "Наследование"
    = f.text_field :ancestry
  - if params[:action] == "edit"
    = f.submit 'Сохранить', :class => "btn primary"
  - else
    = f.submit "Создать", :class => "btn primary"
  = link_to 'Отмена', admin_cities_path, :class => "btn"
