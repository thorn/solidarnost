%h2 Войти в систему

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-stacked"}) do |f|
  .field
    = f.label :email, "Электроная почта"
    = f.email_field :email

  .field
    = f.label :password, "Пароль"
    = f.password_field :password

  - if devise_mapping.rememberable?
    %div
      = f.label :remember_me, "Запомнить меня"
      = f.check_box :remember_me, :checked => true

  .actions
    = f.submit "Войти", :class => "btn primary"

= render :partial => "devise/shared/links"
