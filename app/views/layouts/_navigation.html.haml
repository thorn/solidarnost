%h3= link_to "Nadejda", root_path
%ul.nav
  %li= link_to "Семьи", families_path
  %li
    = form_tag families_path, :id => "family_search", :method => :get do
      .input-append
        = text_field_tag 'search_title_contains', nil, :placeholder => "Поиск по семьям...", :name => 'search[title_contains]'
        %a.family-search-button.add-on.active(href="#" style="background-image: url('/assets/search.png')")
      = hidden_field_tag 'commit', 'search'
  %li= link_to "Расширенный поиск", search_path
  %li= link_to "Статистика", statistics_path
  %li.dropdown(data-dropdown="dropdown")
    %a.dropdown-toggle(href="#") Управление
    %ul.dropdown-menu
      %li= link_to "Группы", admin_groups_path
      %li= link_to "Коэффициенты", admin_group_options_path
      %li= link_to "Типы помощи", admin_help_types_path
      %li= link_to "Города", admin_cities_path
      %li= link_to "Пользователи", admin_users_path
      %li= link_to "Необходимые вещи", admin_necessities_path
      %li= link_to "Виды образования", admin_study_categories_path
      %li= link_to "Роли пользователей", admin_roles_path

  - if user_signed_in?
    %li= link_to "Выйти", destroy_user_session_path, :method => :delete
    %li= link_to current_user.email, edit_user_registration_path
  - else
    %li= link_to "Регистрация", new_user_registration_path
    %li= link_to "Войти", new_user_session_path
