= content_for :sidebar do 
  %ul.unstyled
    %li
      = link_to "Новый расшир. поиск", search_path, :class => "btn primary"
    %li
      = link_to "Назад к списку семей", families_path, :class => "btn info"
    %li#delete_marked
      = link_to "Удалить отмеченные", "#", :class => "btn error", :confirm => 'Вы уверены, что хотите удалить отмеченные семьи?'

%h1 Расширенный поиск по семьям

= form_for @search, :url => search_path, :html => {:method => :get, :class => "form-stacked"} do |f|
  .row
    .span5
      = render 'pages/data_fields', :f => f
    .span5
      = render 'pages/condition_fields', :f => f
    .span5
      = render 'pages/family_members_fields', :f => f
  .actions
    = f.submit "Поиск", :class => "btn primary"
    %input{:type => "button", :value => "Сброс", :class => "btn", :class => "clear_form_button"}


= form_tag delete_multiple_path, :id => "delete_multiple" do
  = render 'families/table'
  = submit_tag "Удалить отмеченные", :class => "btn error"
- if params[:q]
  = link_to "Полный список семей", families_path, :class => "btn info"
